{
  "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended"],
  "plugins": ["unused-imports", "filenames-simple"],
  "ignorePatterns": [
    "node_modules/*",
    ".next/*",
    ".out/*",
    "!.prettierrc.js",
    "next-env.d.ts"
  ],

  "parser": "@typescript-eslint/parser",
  "rules": {
    "react/no-unescaped-entities": "off",
    // "react/no-danger-with-children": "off",
    "prefer-const": "warn",
    "semi": ["warn", "always"],
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],

    "eqeqeq": ["warn", "smart"],
    "no-alert": "error",
    "semi-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "default-case": "warn",
    "wrap-regex": "warn",
    "no-useless-rename": [
      "error",
      {
        "ignoreDestructuring": false,
        "ignoreImport": false,
        "ignoreExport": false
      }
    ],


    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "warn",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
